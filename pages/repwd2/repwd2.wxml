<!--pages/repwd/repwd.wxml-->
<form bindsubmit='formSubmit'>
  <view class="content">
	<image class='background' src="/pwd.JPG" mode="aspectFill"></image>
</view>

<view class='old'>
  <text >原密码</text>
      <input password='true' name='oldpwd' placeholder-style='font-size:15px;' placeholder='请输入原密码'/>
</view>
<view class='new'>
  <text>新密码</text>
  <input password='true' name='newpwd' placeholder-style='font-size:15px;' placeholder='请输入新密码' />
</view>
<view class='ok'>
  <text>确认新密码</text>
  <input password='true' name='newpwd2' placeholder-style='font-size:15px;' placeholder='请确认一遍新密码' />
</view>
<button type='primary' form-type='submit'>提交</button>
</form>
