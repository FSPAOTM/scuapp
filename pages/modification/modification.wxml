<!--pages/modification/modification.wxml-->
<view>

<view class="title">发布信息详情</view>
<form>
<view class='item'>
<text class='a1' style="padding-left:50rpx;font-size:15px">兼职岗位：</text>
<text class='right'>{{myinfo.name}}</text>
  </view>
  <view class='arrow' bindtap="modalinput"></view>

  <view class='item'>
    <text class='a1' style="padding-left:50rpx;font-size:15px">工作时间：</text>
     <text class='right' >{{myinfo.age}}</text>
     <view class='arrow' bindtap="modalinput"></view>
  </view>

  <modal id="modal" hidden="{{hiddenmodalput}}" title="信息完善" confirm-text="提交" cancel-text="取消" bindcancel="cancel" bindconfirm="confirm">
<input type='text' placeholder="请填写修改后的信息" auto-focus/>
</modal>




  <view class='item'>
    <text class='a1' style="padding-left:50rpx;font-size:15px">工作地点:</text> 
    <text class='right'>{{myinfo.sex}}</text>
    <view class='arrow' bindtap="modalinput"></view>
  </view>

  <view class='item'>
    <text class='a1' style="padding-left:50rpx; font-size:15px">薪酬：</text>
     <text class='right'>{{myinfo.edu}}</text>
     <view class='arrow' bindtap="modalinput"></view>
  </view>

  <view class="section">
<view class="jieshang" style="padding-left:30rpx;font-size:15px">职位描述</view>
<view  class="xian"></view>
<view style=" height: 150px;">
<view class='arrow' bindtap="modalinput"></view>
<text  style="font-size:30rpx; margin-left:30rpx;;"maxlength='200'>{{myinfo.ass}}</text>
</view>
      </view>


<view class="section">
<view class="jieshang" style="padding-left:30rpx;font-size:15px">招聘要求</view>
<view  class="xian"></view>
<view style=" height: 150px;">
  <view class='arrow' bindtap="modalinput"></view>
<text style="font-size:30rpx;margin-left:30rpx" maxlength='200'>{{myinfo.work}}</text>
</view>
      </view>

     

      <view class='item'>
    <text class='a1' style="padding-left:50rpx;font-size:15px">招聘人数：</text> 
    <text class='right'>{{myinfo.edu}}</text>
    <view class='arrow' bindtap="modalinput"></view>
  </view> 

  <view class='item'>
    <text class='a1' style="padding-left:50rpx;font-size:15px">报名截止时间：</text> 
    <text class='right'>{{myinfo.edu}}</text>
    <view class='arrow' bindtap="modalinput"></view>
  </view> 

  <view class='item'>
    <text class='a1' style="padding-left:50rpx;font-size:15px">备注：</text> 
    <text class='right'>{{myinfo.edu}}</text>
    <view class='arrow' bindtap="modalinput"></view>
  </view> 

  <view class='item'>
    <text class='a1' style="padding-left:50rpx;font-size:15px">已报名人数：</text> 
    <text class='right'>{{myinfo.edu}}</text>
  </view> 


<!--<button style="margin-top:50rpx;" form-type="submit" hover-class='button-hover' class='su'>保存</button>-->

 </form>
</view>


