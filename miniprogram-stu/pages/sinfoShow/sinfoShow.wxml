<!--pages/infoShow/infoShow.wxml-->
<view>
  <!-- <view class="title">个 人 简 历</view> -->
  <view class="line"></view>

  <form>
    <!--简历-->
    <view class="all">
    <view class='xixixi'>
      <view class='item'>
        <text class="show1" >姓名：{{name}}</text>
      </view>
      <view class='item'>
        <text class="show1" >性别：{{gender}}</text>
      </view>
      
    </view>

    <view class='xixixi'>
      <view class='item'>
        <text class="show2">年龄：{{age}}</text>
      </view>

      <view class='item'>
        <text class="show2">教育背景：{{edu}}</text>
      </view>
    </view>
  </view>

    <view class="section">
      <view style="padding-left:30rpx;font-size:30rpx">
        <image class="zhuce2" src="/images/简历3.png"></image>
        <text class="class">技能自评</text>
        <view class="xian"></view>
      </view>
     
      <view class="word">{{tech}}</view>
    </view>

    <view class="section">
      <view style="padding-left:30rpx;font-size:30rpx">
        <image class="zhuce2" src="/images/简历3.png"></image>
        <text class="class">工作经历</text>
        <view class="xian"></view>
      </view>

      <view class="word">{{job}}</view>
    </view>

    <view class="section">
      <view style="padding-left:30rpx;font-size:30rpx">
        <image class="zhuce2" src="/images/简历3.png"></image>
        <text class="class">项目经历</text>
        <view class="xian"></view>
      </view>
    
      <view class="word">{{project}}</view>
    </view>

    <view class="section">
      <view style="padding-left:30rpx;font-size:30rpx">
        <image class="zhuce2" src="/images/简历3.png"></image>
        <text class="class">课外实践</text>
        <view class="xian"></view>
      </view>
  
      <view class="word">{{practice}}</view>
    </view>


    <view class="section">
      <view style="padding-left:30rpx;font-size:30rpx">
        <image class="zhuce2" src="/images/简历3.png"></image>
        <text class="class">个人作品</text>
      </view>
  
      <view class="word">{{works}}</view>
    </view>


    <button style="margin-top:50rpx;" form-type="submit" hover-class='button-hover' class='su'
      bindtap="change">去完善</button>

  </form>
</view>