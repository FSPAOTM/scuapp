/* pages/infoModify/infoModify.wxss */
.nav {
  background-color: #fff;
}

.nickname {
  margin-bottom: 10rpx;
  text-align: center;
}

.item {
  height: 70rpx;
  background-color: #fff;
  margin: 20rpx;
  display: flex;
  border-radius: 20rpx;
}

.left {
  display: flex;
  justify-content: flex-start;
  flex-grow: 1;
}

.right {
  display: flex;
  justify-content: flex-end;
  flex-grow: 1;
  color: #ccc;
  margin-right: 20rpx;
  padding-right: 30rpx;
}

.arrow {
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
  margin-top: 10rpx;
}

button {
  background: #d9002f;
  color: #fff;
  width: 80%;
  font-size: 34rpx;
  margin-bottom: 40rpx;
}

.title {
  font-family: "黑体";
  font-weight: 1000;
  font-size: 36rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}