  /*头像*/
.summary .avatar {
  width: 60px;
  height: 60px;
  margin: 20px;
}

.header{
  position: relative;
  height: 190rpx;
  line-height: 120rpx;
  padding:30rpx 30rpx 30rpx 180rpx;
  box-sizing: border-box;
  background: #FFF5EE;
  font-size: 35rpx;
  color: rgb(138, 138, 138);
}
.header .thumb{
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.header .about{
  float: right;
}


