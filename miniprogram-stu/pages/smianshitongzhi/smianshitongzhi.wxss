/* pages/cmianshitongzhi/cmianshitongzhi.wxss */
.section {
  background: #fff;
  border: 5rpx solid #FFE4E1;
  border-radius: 20rpx;
  padding: 10rpx;
  margin: 30rpx;
  background-color: rgb(252, 249, 249);
}

.content {
  display: flex;
  flex-direction: column;
}

.after {
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  color:gray;
  font-size: smaller;
}

.tongzhi {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  text-align: center;
  color: #FA8D33;
}

.xian2 {
  width: 90%;
  background: #FFE4E1;
  height: 3px;
  margin-left: 25rpx;
  margin-bottom: 20rpx;
}

.line {
  height: 10rpx;
  background: #FFE4E1;
}


.section_gap {
  display: flex;
  flex-direction: row;
}

.title {
  font-family: "KaiTi";
  font-weight: 900;
  font-size: 32rpx;
  text-align: center;
  background: #F0F8FF;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
}

button {
  background: #FA8D33;
  color: #fff;
  width: 80%;
}