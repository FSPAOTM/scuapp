page{
  height: 80%!important;
  background-size:100%;
  background-color:white;
}
 
.container {
  height: 80%!important;
  width:600rpx;
  margin-left:auto;
  margin-right:auto;
  display: block;
  padding: 0;
  box-sizing: border-box;
} 
 
/*登录图片*/
.login-icon{
  flex: none;
  margin-left: 170rpx;
  margin-top: 130rpx;
}
.login-img{
  width: 280rpx;
  height:280rpx;

}
 
/*表单内容*/
.login-from {
  margin-top: 150rpx;
  flex: column;
}

 /*提示语*/
.weui-input{
  font-size: 24rpx;
  text-align: center;
}

/* 输入框 */
.userno{
  width: 60%;
  height: 70rpx;
  margin: 0 auto;
  border:2rpx solid #9E9E9E;
  border-radius: 50rpx;
  padding-top:10px;
}

.userpwd{
  width: 60%;
  height: 70rpx;
  margin: 0 auto;
  border:2rpx solid #9E9E9E;
  border-radius: 50rpx;
  padding-top:20rpx;
}

.lock-img{
  margin-top: 16rpx;
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.yhm{
  margin-top: 20rpx;
  font-size: 30rpx;
}

.mm{
  margin-top: 26rpx;
  font-size: 30rpx;
}

.userTotal{
  display:flex;
  flex-direction: row;
}

.pwdTotal{
  display:flex;
  flex-direction: row;
  margin-top: 40rpx;
}

/*按钮*/
.loginBtnView {
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  padding-bottom: 0rpx;
}
 
