/* 折叠框样式 */
.fold__panel {
  margin-top: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.fold__items {
  width: 80% !important;
  background: #FFFFFF;
  box-shadow: -12rpx 0rpx 58rpx 0rpx #E7E7E7;
  border-radius: 20prx;
  margin-bottom: 20rpx;
  margin-right: 10rpx !important;
  padding: 30rpx;
}

.fold__item--head {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}

.fold__item--head .fold__head--l {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  width: 88%;
}

.fold__item--head .fold__head--l .fold__head--title {
  font-size: 16px;
  color: #333;
}

.fold__item--head .fold__head--r {
  flex-basis: 50rpx;
  transition: all 0.4s;
}

.fold__item--head .fold__head--r.on {
  transform: rotate(-180deg);
}

.fold__item--content {
  margin-top: 30rpx;
  transition: all 0.4s;
}

