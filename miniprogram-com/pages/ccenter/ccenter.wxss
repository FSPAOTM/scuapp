/* pages/ccenter/ccenter.wxss */
.item {
  display: flex;
  flex-direction: row;
  border-top: 20rpx solid #ededed;
  color: #999;
  line-height: 70rpx;
  font-size: 28rpx;
}

.title {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  position: relative;
  height: 70rpx;
  border-bottom: 1rpx solid #e9e9e9;
  text-align: center;

}

.detail2 {
  font-size: 30rpx;
  position: absolute;
  right: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #888;
}

.line {
  border: 2rpx solid #ccc;
  opacity: 1;
}

Page {
  font-size: 28rpx;
}

/*头像*/
.summary .avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx;
}

/*昵称*/
.summary .nickname {
  color: black;
  font-size: 36rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.a1 {
  width: 40rpx;
  height: 40rpx;
  margin: 40rpx;
}

.header {
  position: relative;
  height: 220rpx;
  line-height: 120rpx;
  padding: 30rpx 30rpx 30rpx 180rpx;
  box-sizing: border-box;
  background: #FFF5EE;
  font-size: 35rpx;
  color: rgb(138, 138, 138);
}

.header .thumb {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}

.header .about {
  float: right;
}

.round-click {
  float: right;
  margin-right: 30rpx;
  margin-top: 20rpx;
}

.addicon {
  width: 50rpx;
  height: 50rpx;
}