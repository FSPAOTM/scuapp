<!--pages/ccenter/ccenter.wxml-->
<import src="template\tabbar.wxml" />
<template is="tabBar" data="{{tabBar}}" />
<view class="header">
  <view class="thumb">
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class='nickname'>
    <view class="nickname">{{name}}</view>
  </view>
</view>

<view class='item' bindtap="infofill">
  <image src="/images/信息.png" class="a1" />
  <view class="title">企业信息完善</view>
  <view class="detail2">
    <text>></text>
  </view>
</view>
<view class="line"></view>

<view class='item' bindtap="cpingjia">
  <image src="/images/评价.png" class="a1" />
  <view class="title">评价</view>
  <view class="detail2">
    <text>></text>
  </view>
</view>

<view class="line"></view>
<view class="item">
  <image src="/images/设置.png" class="a1" />
  <view class="title">设置</view>
  <view class="detail2">
    <text> ></text>
  </view>
</view>
<view class="line"></view>

<view class="round-click" bindtap="exitlogin">
  <image class="addicon" src="/images/zhuxiao.png"></image>
</view>