<!--pages/repwd/repwd.wxml-->
<form bindsubmit='formSubmit'>
  <view class="line"></view>

  <view class='old'>
    <image class="zhuce" src="/images/repwd2.png"></image>
    <text style="margin-top:40rpx;">原密码</text>
    <input password='true' name='oldpwd' placeholder-style='font-size:28rpx;margin-left:40rpx;' placeholder='请输入原密码'
      bindblur="old" />
    <view class="xian"></view>
  </view>

  <view class='new'>
    <image class="zhuce" src="/images/repwd2.png"></image>
    <text>新密码</text>
    <input password='true' name='newpwd' placeholder-style='font-size:28rpx;margin-left:40rpx;'
      placeholder='请输入8-18位新密码' bindblur="new" />
    <view class="xian"></view>
  </view>

  <view class='ok'>
    <image class="zhuce" src="/images/repwd2.png"></image>
    <text>确认新密码</text>
    <input password='true' name='newpwd2' placeholder-style='font-size:28rpx;margin-left:40rpx;' placeholder='请确认一遍新密码'
      bindblur="again" />
    <view class="xian"></view>
  </view>

  <button style="margin-top:160rpx" type='primary' form-type='submit'>提交</button>
</form>