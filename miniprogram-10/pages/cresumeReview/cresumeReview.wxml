<!--pages/cresumeDecide/cresumeDecide.wxml-->
<!--企业管理者对报名者简历的审核，可以查看报名者的简历，进而决定是接受或者拒绝-->

<view>

<view class="title" style="font-size:17px">简历审核</view>
<form>
<view class='item'>
<text class='a1' style="padding-left:60rpx;font-size:15px">姓名：</text>
<text class='right'>{{myinfo.name}}</text>
  </view>



  <view class='item'>
    <text class='a1' style="padding-left:60rpx;font-size:15px">年龄：</text>
     <text class='right' >{{myinfo.age}}</text>
  </view>



  <view class="section section_gap">
    <text class='a1' style="padding-left:60rpx;font-size:15px">性别:</text> <text class='right'>{{myinfo.sex}}</text>
  </view>



  <view class='item'>
    <text class='a1' style="padding-left:60rpx;font-size:15px">教育背景：</text> <text class='right'>{{myinfo.edu}}</text>
  </view>

  <view class="section">
<view class="jieshang" style="padding-left:30rpx;font-size:15px">技能自评</view>
<view  class="xian"></view>
<view style=" height: 150px;">
<text  style="font-size:30rpx; margin-left:30rpx;;"maxlength='150'>{{myinfo.ass}}</text>
</view>
      </view>

<view class="section">
<view class="jieshang" style="padding-left:30rpx;font-size:15px">工作经历</view>
<view  class="xian"></view>
<view style=" height: 150px;">
<text style="font-size:30rpx;margin-left:30rpx" maxlength='150'>{{myinfo.work}}</text>
</view>
      </view>

      <view class="section">
<view class="jieshang" style="padding-left:30rpx;font-size:15px" >项目经历</view>
<view  class="xian"></view>
<view style=" height: 150px;">
<text style="font-size:30rpx;margin-left:30rpx" maxlength='150'>{{myinfo.proj}}</text>
</view>
      </view>

      <view class="section">
<view class="jieshang" style="padding-left:30rpx;font-size:15px" >课外实践</view>
<view  class="xian"></view>
<view style=" height: 150px;">
<text style="font-size:30rpx;margin-left:30rpx" maxlength='150'>{{myinfo.ext}}</text>
      </view>
    </view>

      <view class="shopstore">
  <view class="shopstore_log">
  <text class="jieshang" style="padding-left:30rpx;font-size:15px">个人作品</text>
  <text style="font-size:30rpx;margin-left:30rpx" maxlength='150'>{{myinfo.per}}</text>
  </view>
</view>

<view  class="btn1">
            <input type="button" id="leftButton" onclick="login()"/>
        </view>
        <view class="btn2">
            <input type="button" id="rightButton" onclick="cancle()"/>
        </view>

        <button style="margin-top:50rpx;" bindtap="modalinput">接受</button>
        <button style="margin-top:50rpx;" bindtap="modalinput2">拒绝</button>

        <modal id="modal" hidden="{{hiddenmodalput}}" title="请确定是否接受该报名者" confirm-text="确定" cancel-text="取消" bindcancel="cancel" bindconfirm="confirm">
        </modal>

        <modal id="modal2" hidden="{{hiddenmodalput2}}" title="请确定是否拒绝该报名者" confirm-text="确定" cancel-text="取消" bindcancel="cancel" bindconfirm="confirm">
        </modal>


 </form>
</view>




