<!--pages/cjobSelect/cjobSelect.wxml-->
<!--pages/button-select/button-select.wxml-->
<view class="title">请选择兼职类型</view>

<text class='a1' style="padding-left:70rpx;font-size:15px">热门类型</text>

<view style="padding-left:50rpx; padding-right:50rpx">

  <view class='button_container'>
  <block wx:for="{{buttons}}" wx:key="name"  wx:if="{{index<3}}" >
  <button class='{{item.checked?"checked_button":"normal_button"}}' data-id='{{item.id}}' bindtap='radioButtonTap'>{{item.name}}</button>
  </block>
  </view>


<view class='button_container'>
  <block wx:for="{{buttons}}" wx:key="name"  wx:if="{{2<index&&index<6}}" >
  <button class='{{item.checked?"checked_button":"normal_button"}}' data-id='{{item.id}}' bindtap='radioButtonTap'>{{item.name}}</button>
  </block>
  </view>

  <text class='a1' style="padding-left:15rpx;font-size:15px">更多类型</text>

  <view class='button_container'>
  <block wx:for="{{buttons}}" wx:key="buttons"  wx:if="{{5<index&&index<9}}" >
  <button class='{{item.checked?"checked_button":"normal_button"}}' data-id='{{item.id}}' bindtap='radioButtonTap'>{{item.name}}</button>
  </block>
  </view>

  <view class='button_container'>
  <block wx:for="{{buttons}}" wx:key="buttons"  wx:if="{{8<index&&index<12}}" >
  <button class='{{item.checked?"checked_button":"normal_button"}}' data-id='{{item.id}}' bindtap='radioButtonTap'>{{item.name}}</button>
  </block>
  </view>

  <view class='button_container'>
  <block wx:for="{{buttons}}" wx:key="buttons"  wx:if="{{11<index&&index<15}}" >
  <button class='{{item.checked?"checked_button":"normal_button"}}' data-id='{{item.id}}' bindtap='radioButtonTap'>{{item.name}}</button>
  </block>
  </view>

  <view class='button_container'>
  <block wx:for="{{buttons}}" wx:key="buttons"  wx:if="{{14<index&&index<17}}" >
  <button class='{{item.checked?"checked_button":"normal_button"}}' data-id='{{item.id}}' bindtap='radioButtonTap'>{{item.name}}</button>
  </block>
  </view>

</view>

<view class='pbottom'>
  <button class="weui-btn" type="primary" bindtap='submit'>下一步</button>
</view>

 
