<!--pages/repwd1-1/repwd1-1.wxml-->
<form bindsubmit='formSubmit'>
  <view class="imply">STEP 2  密码重置</view>
<view class='new'>
  <image class="zhuce" src="repwd1-1.png"></image>
  <text>新密码</text>
  <input password='true' name='newpwd'  placeholder style="font-size: 28rpx;" placeholder='请输入新密码' bindblur="new"/>
</view>
<view class='ok'>
  <image class="zhuce" src="repwd1-1.png"></image>
  <text>确认新密码</text>
  <input password='true' name='newpwd2'  placeholder style="font-size: 28rpx;" placeholder='请确认一遍新密码' bindblur="again"/>
</view>
<button style="margin-top:15px" type='primary' form-type='submit'>提交</button>
</form>

