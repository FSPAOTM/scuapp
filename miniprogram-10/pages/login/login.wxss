/* pages/login/login.wxss */
page{
  height: 100%;
  background-size:100%;
  background-color:white;
}
 
.container {
  height: 100%;
  width:300px;
  margin-left:auto;
  margin-right:auto;
  display: block;
  padding: 0;
  box-sizing: border-box;
  /* background-color: #f2f2f2;*/
} 
 
/*登录图片*/
.login-icon{
  flex: none;
  margin-left: 85px;
  margin-top: 130rpx;
}
.login-img{
  width: 140px;
  height:140px;

}
 
/*表单内容*/
.login-from {
  margin-top: 75px;
  flex: column;
  height:100%;
}

 /*提示语*/
.weui-input{
  font-size: 12px;
  text-align: center;
}

/* 输入框 */
.userno{
  width: 60%;
  height: 35px;
  margin: 0 auto;
  border:1px solid #9E9E9E;
  border-radius: 50rpx;
  padding-top:10px;
}

.userpwd{
  width: 60%;
  height: 35px;
  margin: 0 auto;
  border:1px solid #9E9E9E;
  border-radius: 50rpx;
  padding-top:10px;
}

.lock-img{
  margin-top: 8px;
  width: 25px;
  height: 25px;
  margin-right: 30rpx;
}

.yhm{
  margin-top: 10px;
  font-size: 15px;
}

.mm{
  margin-top: 13px;
  font-size: 15px;
}

.userTotal{
  display:flex;
  flex-direction: row;
}

.pwdTotal{
  display:flex;
  flex-direction: row;
  margin-top: 20px;
}

/*按钮*/
.loginBtnView {
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}
 
.loginBtn {
  width: 90%;
  height: 80rpx;
  margin-top: 30px;
  color: #fff;
  background-color:#7e8ef0;
  border: 0.1rpx solid #ccc;
  border-radius: 10rpx;
}

